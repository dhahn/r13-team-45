<% provide(:title, 'Chore Lists') %>
<div class="box chorelist">
  <div class="inner-box">
    <h1><%= @chore_list.title %></h1>
    <% @chore_list.chore_list_items.each do |item| %>
      <div class="item">
        <span class="value"><%= "#{item.body}" %></span>
      </div>
    <% end %>
    <% @chore_list.chore_list_recurring_items.each do |item| %>
      <div class="item">
        <span class="value"><%= "#{item.body}" %></span>
      </div>
    <% end %>
  </div>
</div>

<h2> Comments </h2>
<%= render partial: "notes/index", locals: {notes: @chore_list.notes} %>
<%= render partial: "notes/form", locals: {note: Note.new, note_type: "ChoreList", note_type_id: @chore_list.id} %>
