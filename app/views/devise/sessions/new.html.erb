<%= form_for(resource, :html => {:class => "sign-in cf"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email"  %>

  <%= f.password_field :password, :placeholder => "Password" %>

  <% if devise_mapping.rememberable? -%>
  	<div class="remember">
    	<%= f.label :remember_me, "Remember Me?" %><%= f.check_box :remember_me %>
    </div>
  <% end -%>

  <%= f.submit "Sign in" , :class => "submit-button" %>

<% end %>	

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot-password" %>
<% end -%>

<hr />

<div class="shared-links">
<%= render "devise/shared/links" %>
</div>