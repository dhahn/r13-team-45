<style>
	@media (min-width: 520px) {
		#page-wrap{
			background: url(/assets/iceberg.jpg) no-repeat center center fixed; 
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
		}
	}
</style>
<div class="form-wrap-sign-up">
	<%= form_for(resource, :html => {:class => "sign-up cf"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>


	  <% unless @invitation.blank? %>
	    <%resource.email = @invitation.recipient_email %>
	    <div><%= hidden_field_tag "user[room_id]", @invitation.room_id %><br /></div>
	  <% end %>

	  <%= f.email_field :email, :autofocus => true, :placeholder => "Email"  %>

	  <%= f.password_field :password, :placeholder => "Password"  %>

	  <%= f.password_field :password_confirmation, :placeholder => "Repeat Password"  %>

	  <%= f.submit "Register", :class => "sign-up-button" %>
	<% end %>
</div>