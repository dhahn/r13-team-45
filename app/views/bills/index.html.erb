<h1>Listing bills</h1>

<table>
  <tr>
    <th>Body</th>
    <th>UserID</th>
    <th>Interval</th>
    <th>Recurring</th>
    <th>Specific Day Of</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.body %></td>
    <td><%= bill.user_id %></td>
    <td><%= bill.interval %></td>
    <td><%= bill.recurring %></td>
    <td><%= bill.specific_day_of %></td>
    <td><%= bill.value %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

