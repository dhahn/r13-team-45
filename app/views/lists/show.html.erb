<% if false %>

<h1><%= "#{@list.type}: #{@list.title}" %></h1>


<h2> Recurring Items </h2>
<% @list.recurring_items.each do |item| %>
  <p>
    Body: <%= "#{item.body}" %>
    Value: <%= "#{item.value}" %>
    Specific Day Of: <%= "#{item.specific_day_of}" %>
    Interval: <%= "#{item.interval}" %>
  </p>
<% end %>
    <%= link_to 'Edit', edit_list_path(@list) %> |
    <%= link_to 'Back', lists_path %>
<% end %>

<div class="box checklist">
  <div class="inner-box">
    <h1><%= @list.title %></h1>
    <% @list.items.each do |item| %>
      <div class="item">
        <span class="value"><%= "#{item.body}" %></span>
      </div>
    <% end %>
  </div>
</div>