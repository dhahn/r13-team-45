<% provide(:title, 'Chore Lists') %>
<% if @chore_lists.empty? %>
  <div class="box sorry">
    <div class="inner-box">
      There aren't any chores here. You can make a new one by clicking the <span id="add-button" aria-hidden="true" data-icon="&#xe601;"></span> at the top of your screen!
    </div>
  </div>
<% end %>
<% @chore_lists.each do |chore_list| %>
  <div class="box chorelist">
    <div class="inner-box">
      <h1><%= chore_list.title %></h1>
      <% chore_list.chore_list_items.each do |item| %>
        <div class="item" data-value=<%= item.value %> data-item-id=<%= item.id %> data-controller="chore_list_items" >
          <% if item.value == 1 %>
            <span class="value line-through"><%= "#{item.body}" %></span>
          <% else %>
            <span class="value"><%= "#{item.body}" %></span>
          <% end %>
        </div>
      <% end %>
      <% chore_list.chore_list_recurring_items.each do |item| %>
        <div class="item" data-value=<%= item.value %> data-item-id=<%= item.id %> data-controller="chore_list_recurring_items" >
          <% if item.value == 1 %>
            <span class="value line-through"><%= "#{item.body}" %></span>
          <% else %>
            <span class="value"><%= "#{item.body}" %></span>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= link_to chore_list, :class => "blue-box" do %>
      <span id="menu-button" aria-hidden="true" data-icon="&#xe600;"></span> <%= chore_list.notes.length %> Comments
    <% end %>
  </div>
<% end %>
