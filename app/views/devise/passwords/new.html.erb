<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "forgot cf", :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true , :placeholder => "Email" %>

  <%= f.submit "Send Reset Email" , :class => "reset-button" %>
<% end %>
