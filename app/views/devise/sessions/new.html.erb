<div class="form-wrap">
	<div class="inner-box">
		<div class="fridge-intro">
			<span>Fridge</span> is a micro social network that manages the details of living with your roommates. You can post and share bills, manage chore lists, organize grocery purchases, post polls for your roommates to vote on, and more!
		</div>
	</div>
	<div class="inner-box">
		<%= form_for(resource, :html => {:class => "sign-in cf"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <%= f.email_field :email, :autofocus => true, :placeholder => "Email"  %><!--

		  --><%= f.password_field :password, :placeholder => "Password" %>

		  <% if devise_mapping.rememberable? -%>
		  	<div class="remember">
		    	<%= f.label :remember_me, "Remember Me?" %><%= f.check_box :remember_me %>
		    </div>
		  <% end -%>

		  <%= f.submit "Sign in" , :class => "submit-button" %>

		<% end %>	

		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
			  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot-password" %>
		<% end -%>

		<hr />

		<div class="shared-links">
		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>