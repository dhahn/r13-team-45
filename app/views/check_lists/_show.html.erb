<div class="box checklist">
  <div class="inner-box">
    <% if can? :destroy, check_list %>
      <%= button_to "delete", check_list, :method => :delete %> 
    <% end %>
    <h1><%= check_list.title %></h1>
    <% check_list.check_list_items.each do |item| %>
      <div class="item" data-value=<%= item.value %> data-item-id=<%= item.id %> >
        <% if item.value == 1 %>
          <span class="value line-through"><%= "#{item.body}" %></span>
        <% else %>
          <span class="value"><%= "#{item.body}" %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
